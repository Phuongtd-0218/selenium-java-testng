<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite1" verbose="1" >
<!--    parallel - chạy nhiều máy cùng 1 lúc, không nên chạy tên 1 máy, nên chạy với Selenium GRID, test cloud-->
    <parameter name="server" value="Production"></parameter>

    <listeners>
        <listener class-name="listener.ScreenShotListener"></listener>
    </listeners>
    <test name="Run on Chorme">
        <parameter name="browser" value="Chorme"></parameter>
        <classes>
            <class name="testng.Topic_09_Multiple_Browser"></class>
        </classes>
    </test>

    <test name="Run on Edge">
        <parameter name="browser" value="Edge"></parameter>
        <classes>
            <class name="testng.Topic_09_Multiple_Browser"></class>
        </classes>
    </test>

    <test name="Run on Firefox">
        <parameter name="browser" value="Firefox"></parameter>
        <classes>
            <class name="testng.Topic_09_Multiple_Browser"></class>
        </classes>
    </test>


</suite>

